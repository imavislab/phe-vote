<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Vote Poster</title>
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      body {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        background-color: #FFF5F0;
        position: relative;
        max-width: 100vw;
        overflow-x: hidden;
      }
      .main-container {
        flex: 1;
        display: flex;
        flex-direction: column;
        width: 100%;
        max-width: 100%;
        margin: 0 auto;
        padding: 0;
        padding-bottom: 150px;
      }
      .content-container {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 100%;
        padding: 1rem;
        margin: 2rem 0;
      }
      .vote-form {
        width: 100%;
        max-width: 480px;
        margin: 0 auto;
        padding: 0 20px;
      }
      @media (max-width: 640px) {
        .vote-form {
          padding: 0 16px;
          max-width: 100%;
        }
      }
      footer {
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        z-index: -1;
      }
    </style>
  </head>
  <body>
    <%- include('partials/header') %>
    <main class="main-container">
      <div class="content-container">
        <div x-data="voteForm()" class="vote-form">
          <!-- <h1 class="text-2xl font-bold mb-4 text-center">Vote Poster</h1> -->

          <template x-if="!posterId">
            <p class="text-red-600 text-center mb-4">Poster ID tidak ditemukan di URL.</p>
          </template>

          <template x-if="success">
            <p class="text-green-600 text-center mb-4" x-text="message"></p>
          </template>
          <template x-if="error">
            <p class="text-red-600 text-center mb-4" x-text="message"></p>
          </template>

          <form @submit.prevent="submitVote" x-show="posterId">
            <input type="hidden" x-model="posterId" />
            <input 
              type="text" 
              x-model="voucherCode" 
              class="w-full p-4 rounded-xl mb-4 text-lg placeholder-gray-400 focus:outline-none bg-white" 
              placeholder="Enter your code" 
              required 
              style="box-shadow: 0 2px 6px rgba(0,0,0,0.1);"
            />
            <button 
              type="submit" 
              class="w-full py-4 rounded-full text-white text-lg font-medium transition-transform hover:scale-105"
              style="background-color: #95C11F; box-shadow: 0 4px 15px rgba(149, 193, 31, 0.3);"
            >
              Submit
            </button>
          </form>
        </div>
      </div>
    </main>
    <footer>
      <%- include('partials/footer') %>
    </footer>

    <script>
      function voteForm() {
        const urlParams = new URLSearchParams(window.location.search);
        const posterId = urlParams.get("poster_id");

        return {
          voucherCode: "",
          posterId,
          success: false,
          error: false,
          message: "",

          async submitVote() {
            this.success = false;
            this.error = false;

            if (!this.voucherCode.trim()) {
              this.error = true;
              this.message = "Kode kupon wajib diisi.";
              return;
            }

            try {
              const res = await fetch("/vote", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({
                  voucherCode: this.voucherCode,
                  posterId: this.posterId,
                }),
              });

              const data = await res.json();

              if (!res.ok) throw new Error(data.error || "Gagal vote");

              this.success = true;
              this.message = data.message;
              this.voucherCode = "";

              setTimeout(() => {
                window.location.href = "/vote-result";
              }, 1500);
            } catch (err) {
              this.error = true;
              this.message = err.message;
            }
          },
        };
      }
    </script>
  </body>
</html>
